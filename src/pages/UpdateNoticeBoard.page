<apex:page standardController="Volunteers_Settings__c" >
	<apex:pageMessages />
	<apex:form >
		<apex:pageBlock id="thePageBlock" title="Update Notice Board" mode="edit">
			<apex:pageBlockButtons >
				<apex:commandButton value="Save" action="{!save}" />
			</apex:pageBlockButtons>
			<apex:pageBlockSection columns="1">
				<apex:inputTextarea value="{!Volunteers_Settings__c.Notice_Board__c}" rows="5" style="width:70%"/>
			</apex:pageBlockSection>
			<apex:outputText value="Enter up to 255 characters of text. HTML formatting is allowed, such as <b> for bold, <p> for new paragraph and <br> for line breaks"/>
		</apex:pageBlock>
	</apex:form>
</apex:page>